set defsearch=g
hi StatusLine color:black
hi Normal -append font-size:11px
"set nosb
map d :bdelete -s lastactive <C-m>
noremap h 2h
noremap j 2j
noremap k 2k
noremap l 2l

"colorscheme zenburn

set newtab=all


" tab shrink
:js styles.addSheet(false, "mintabwidth", "chrome://*", ".tabbrowser-tab[fadein]:not([pinned]) { min-width: 16px !important; } .scrollbutton-up, .scrollbutton-down { display:none; }");

" hide statusbar
map <silent> <C-F8> :js toggle_bottombar()<CR>
:js << EOF
function toggle_bottombar() {
    var bb = document.getElementById('liberator-bottombar');
    if (!bb)
        return;
    bb.style.height = (bb.style.height == '') ? '0px' : '';
    bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
    }
EOF
