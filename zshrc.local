# use with grml config
export _JAVA_AWT_WM_NONREPARENTING=1
export XDG_DATA_DIRS="/home/chris/.nix-profile/share:/nix/var/nix/profiles/default/share:/run/current-system/sw/share"
setopt pushdminus

if test -d "$HOME/.zsh/functions/"; then
    for file in $HOME/.zsh/functions/*.sh; do
        test -r "$file" && . "$file"
    done
    unset file
fi
