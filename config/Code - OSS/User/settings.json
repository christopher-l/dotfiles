{
  // Window
  "editor.fontFamily": "Cascadia Code",
  "editor.fontSize": 13,
  "editor.lineHeight": 1.8,
  "terminal.integrated.fontSize": 12,
  "window.menuBarVisibility": "toggle",
  "window.title": "${rootName}",

  // Behavior
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.linkedEditing": true,
  "editor.mouseWheelZoom": true,
  // "editor.suggest.preview": true,
  "editor.tabCompletion": "onlySnippets",
  "explorer.openEditors.sortOrder": "alphabetical",
  "git.closeDiffOnOperation": true,
  "terminal.integrated.showExitAlert": false,
  "workbench.editor.navigationScope": "editorGroup",
  "workbench.editor.openPositioning": "last",
  "workbench.editor.revealIfOpen": true,
  "workbench.startupEditor": "none",
  "files.associations": {
    "profile": "shellscript"
  },

  // Don't show again
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // View
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.rulers": [100],
  "explorer.decorations.badges": false,
  "explorer.openEditors.visible": 99,
  "outline.showFunctions": false,
  "outline.showVariables": false,
  "terminal.integrated.minimumContrastRatio": 4.5,
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "none",
  "editor.semanticTokenColorCustomizations": {
    "enabled": true // enable for all themes
  },
  "workbench.colorCustomizations": {
    "editorOverviewRuler.infoForeground": "#0000", // hide spelling mistakes from overview ruler
    "editorOverviewRuler.warningForeground": "#0000",
    "minimap.warningHighlight": "#0000",
    "editorIndentGuide.background": "#0000" // hide non-active indent guides
  },

  // Plugins
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.formatting.provider": "black",
  "cSpell.enableFiletypes": ["shellscript", "xml"],
  "cSpell.language": "en,de",
  "cSpell.userWords": ["edusharing", "nestjs", "postgres"],
  "cSpell.showCommandsInEditorContextMenu": false,
  "editor.cursorBlinking": "solid",
  "vim.handleKeys": {
    "<C-[>": false,
    "<C-]>": false,
    "<C-a>": false,
    "<C-b>": false,
    "<C-c>": false,
    "<C-d>": false,
    "<C-f>": false,
    "<C-j>": false,
    "<C-k>": false,
    "<C-v>": false,
    "<C-w>": false,
    "<C-x>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "after": [],
      "commands": [
        {
          "command": "undo"
        }
      ]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [
        {
          "command": "redo"
        }
      ]
    }
  ],
  "vim.useCtrlKeys": true,
  "vim.textwidth": 100,
  "vim.leader": ",",
  "vim.camelCaseMotion.enable": true,
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "tabnine.experimentalAutoImports": true,

  // Dynamic
  "workbench.colorTheme": "GitHub Light",
  "window.zoomLevel": 0.5,
}
