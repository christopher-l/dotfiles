# Needed for xdg-desktop-portal to work properly.
#
# We need xdg-desktop-portal-gtk to allow Flatpak apps to open URLs in the browser. However, hawing
# xdg-desktop-portal-gtk installed will break screen sharing via xdg-desktop-portal-wlr unless this
# variable is set.
export XDG_CURRENT_DESKTOP=sway

# Provide SSH key passphrases via gnome keyring
eval $(/usr/bin/gnome-keyring-daemon --start)
export SSH_AUTH_SOCK

# Use fcitx as input method
export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx