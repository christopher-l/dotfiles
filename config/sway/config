################################################################
### Window rules
################################################################
for_window [app_id="ulauncher"] border none
for_window [app_id="zenity"] floating enable
for_window [app_id="yad"] floating enable; border normal
for_window [app_id="wev"] floating enable
for_window [app_id="orca"] floating enable
for_window [app_id="gcolor3"] floating enable
for_window [app_id="firefox" title="Firefox - Choose User Profile"] floating enable
for_window [app_id="firefox" title="Firefox — Sharing Indicator"] floating enable
for_window [app_id="code-oss"] fullscreen disable
for_window [class="zoom" title="Zoom Cloud Meetings"] floating enable, border normal
for_window [class="zoom" title="^zoom$"] border none, floating enable



################################################################
### Startup applications
################################################################
# Systemd session target
exec_always "systemctl --user import-environment; systemctl --user restart sway-session.target"
# Application launcher daemon
exec "ulauncher --hide-window"
# Automatically rename workspaces based on content
exec workstyle
# Enable NetworkManager to read secrets from the key chain
exec "nm-applet"
# Bluetooth
exec "blueberry-tray"
# Sound filters
exec "easyeffects --gapplication-service"
# Backup daemon
exec "/usr/lib/deja-dup/deja-dup-monitor"
# Apply the GTK theme to XWayland applications
exec /usr/lib/gsd-xsettings
# Make geo location available to gammastep
exec /usr/lib/geoclue-2.0/demos/agent
# Adjust color temperature
exec gammastep
# Online accounts
exec "pkill -f goa"
exec "/usr/lib/goa-daemon"
# Gnome Software auto updates
exec "gnome-software --gapplication-service"
# Switch input methods
exec_always fcitx5 -d -r

################################################################
### Status Bar
################################################################
bar {
    swaybar_command waybar
}

